<h1><%= @post.title %></h1>
<br>
<p><%= @post.content %></p>
<ul>
<% @post.categories.each do |c| %>
    <li><%= c.name %></li>
<% end %>
</ul>
<ul>
<% @post.comments.each do |com| %>
    <li><%= com.content %></li>
<% end %>
</ul>
<ul>
<% @post.users.uniq.each do |u| %>
    <li><%= link_to u.username, user_path(u) %></li>
<% end %>
</ul>
<%= form_for Comment.new do |f| %>
    <%= f.label "Comment" %><br>
    <%= f.text_field :content %><br>
    
